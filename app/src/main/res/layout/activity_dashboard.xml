<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBody"
    tools:context=".productcontext.home.DashboardActivity">
    <ProgressBar
        android:id="@+id/progress_dashboard"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_top_card"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:background="@drawable/border_gray_bg_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.2"
                android:id="@+id/dashboard_user_image"
                android:src="@mipmap/ic_launcher"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
            <!--<RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.2">
                <ImageView
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:id="@+id/dashboard_user_image"
                    android:layout_width="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageButton
                    android:id="@+id/dashboard_cam"
                    android:src="@drawable/ic_camera"
                    android:padding="4dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-18dp"
                    android:layout_below="@id/dashboard_user_image"/>
            </RelativeLayout>-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dashboard_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dashboard_user_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/dashboard_top_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.25"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_mid_card"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:background="@drawable/border_gray_bg_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dashboard_points_to_go_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="300 points to go"
                android:textSize="12sp"
                android:gravity="center_horizontal"/>
            
            <ProgressBar
                android:id="@+id/dashboard_points_togo_progress"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:progress="30"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                
                app:layout_constraintTop_toBottomOf="@id/dashboard_points_to_go_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dashboard_badge_progress"/>
            <ImageView
                android:id="@+id/dashboard_badge_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:maxHeight="30dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="4dp"
                
                app:layout_constraintTop_toBottomOf="@id/dashboard_points_to_go_title"
                app:layout_constraintLeft_toRightOf="@id/dashboard_points_togo_progress"
                app:layout_constraintStart_toEndOf="@id/dashboard_points_togo_progress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:padding="8dp"
        android:textSize="15sp"
        android:background="@drawable/border_gray_bg_white"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:text="@string/header_title_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progress_leaderboard_rv"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboard_rv"
        android:background="@drawable/border_gray_bg_white"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="-0.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>