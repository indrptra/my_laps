    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".productcontext.support.SupportWebActivity">
            <ProgressBar
                android:id="@+id/support_load_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/support_web_load_progress"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:focusable="false"
                android:progress="25"
                android:indeterminateBehavior="repeat"
                android:indeterminate="true"
                android:background="@android:color/transparent"
                style="?android:attr/progressBarStyleHorizontal" />
            <WebView
                android:id="@+id/support_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/support_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:background="@drawable/rounded_red_bg"
                android:text="CHAT US"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_down_arrow_red"
                android:layout_marginTop="-8dp"
                android:adjustViewBounds="true"
            />
        </LinearLayout>
        
    </RelativeLayout>
    
