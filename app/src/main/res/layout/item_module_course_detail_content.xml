<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_module_content_container"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              android:background="@drawable/border_gray_bg_white_box"
              android:weightSum="8"
              android:padding="8dp"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_module_content_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="6dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/item_module_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.2"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
    />
    <ImageView
        android:id="@+id/item_module_completion_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:layout_marginStart="0dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_gravity="center_vertical"
        android:maxHeight="20dp"
        android:maxWidth="20dp"
        android:src="@drawable/ic_check_green"
        android:adjustViewBounds="true"
    />
</LinearLayout>