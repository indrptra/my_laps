<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_kf_swipelayout"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:layout_height="wrap_content">
    <!--Bottomview-->
    <RelativeLayout
        android:id="@+id/item_kf_bottom_wrapper"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <Button
            android:id="@+id/item_kf_close_button"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:text="Close"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/item_kf_bottom_wrapper_separator"/>
        <View
            android:id="@+id/item_kf_bottom_wrapper_separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorSemiLightGray"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/item_knowledge_forum_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_white_bg"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_kf_posted_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="2dp"
            android:text="Posted By John Doe"/>
        <TextView
            android:id="@+id/item_kf_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="2dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/colorPrimary"
            android:text="Leadership"/>
        <TextView
            android:id="@+id/item_kf_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="TITLE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_thumb_up_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxHeight="14dp"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/item_kf_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:text="0"/>
            <ImageView
                android:src="@drawable/ic_people_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_gravity="center_vertical"
                android:maxHeight="18dp"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/item_kf_subs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:text="0"/>
            <ImageView
                android:src="@drawable/ic_reply_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_gravity="center_vertical"
                android:maxHeight="18dp"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/item_kf_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:text="0"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorSemiLightGray"/>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
