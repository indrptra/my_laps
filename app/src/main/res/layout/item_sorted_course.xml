<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/sorted_course_main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="0.5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/sc_image"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_logo"/>
        <TextView
            android:id="@+id/sc_title"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="50"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/sc_image"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@id/sc_icon_container"/>
        <LinearLayout
            android:id="@+id/sc_icon_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/sc_btn_start">
            <ImageView
                android:src="@drawable/ic_face"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sc_user_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:lines="1"
                android:inputType="text"
                android:layout_gravity="center_vertical"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="13sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"/>
            <ImageView
                android:src="@drawable/ic_star"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sc_star_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0"
                android:lines="1"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="13sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sc_btn_start"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_red_bg"
            android:layout_margin="4dp"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="START LEARNING"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>