<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productcontext.forum.MainKnowledgeForumActivity">
    
    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">
        
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="0dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/toolbar_back_button_kf"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black"
                    android:padding="8dp"
                    android:layout_marginStart="-8dp"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content"/>
                
                <TextView
                    android:text="KNOWLEDGE FORUM"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/toolbar_search_button_kf"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_search_red"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/toolbar_filter_button_kf"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_filter_black"
                    android:padding="4dp"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    
    </com.google.android.material.appbar.AppBarLayout>
    
    <include layout="@layout/content_main_knowledge_forum"/>
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_kf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorFABOrange"
        app:srcCompat="@drawable/ic_add_white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>