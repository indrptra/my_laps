<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_forum_refresh_layout"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBody"
        tools:context=".productcontext.forum.DetailForumActivity">
        <ProgressBar
            android:id="@+id/detail_forum_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/detail_forum_button_top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSemiLightGray"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/detail_forum_prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/black"
                android:layout_marginEnd="0.5dp"
                android:background="@drawable/left_rounded_bg_white"
                android:drawableStart="@drawable/ic_left_chevron_black"
                android:text="PREV"/>
            <TextView
                android:id="@+id/detail_forum_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/right_rounded_bg_white"
                android:drawableEnd="@drawable/ic_right_chevron_black"
                android:layout_weight="1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_forum_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/detail_forum_button_top_container"
            app:layout_constraintBottom_toTopOf="@id/detail_forum_bottom_progress"/>
        <ProgressBar
            android:id="@+id/detail_forum_bottom_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/detail_forum_rv"
            app:layout_constraintBottom_toTopOf="@id/detail_forum_comment_container"/>
        <LinearLayout
            android:id="@+id/detail_forum_comment_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <Button
                android:id="@+id/detail_forum_adv_button"
                android:drawableTop="@drawable/ic_edit_adv_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Advance"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/detail_forum_qrep_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Quick Reply"
                android:layout_weight="5.9"
                android:padding="4dp"
                android:textSize="14sp"
                android:background="@drawable/editable_gray_bottom_border"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"/>
            <ProgressBar
                android:id="@+id/detail_forum_qrep_post_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="16dp"
                android:layout_weight="1.1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/detail_forum_post_button"
                android:drawableTop="@drawable/ic_send_gray"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:text="Post"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>