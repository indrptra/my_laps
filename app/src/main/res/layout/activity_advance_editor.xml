<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    tools:context=".productcontext.forum.AdvanceEditor">
    <LinearLayout
        android:id="@+id/editor_title_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editor_view_validate">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="CATEGORY"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/editor_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray"/>
            </LinearLayout>
            
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editor_title_view"
            android:lines="4"
            android:background="@drawable/white_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:fallbackLineSpacing="true"
            android:textColor="@android:color/black"
            android:visibility="visible"/>
        
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editor_view_validate"
            android:lines="1"
            android:background="@drawable/white_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="4dp"
            android:fallbackLineSpacing="true"
            android:focusableInTouchMode="false"
            android:textColor="@android:color/black"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/editor_title_container"
            app:layout_constraintBottom_toTopOf="@id/editor_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/editor_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/editor_view_validate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editor_button_container"
    />

    <HorizontalScrollView
        android:id="@+id/editor_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent">
        <!--<include layout="@layout/editor_button_container"/>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/editor_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_bold"/>
            <ImageButton
                android:id="@+id/editor_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_italic"/>
            <ImageButton
                android:id="@+id/editor_align_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_align_left"/>
            <ImageButton
                android:id="@+id/editor_align_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_align_center"/>
            <ImageButton
                android:id="@+id/editor_align_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_align_right"/>
            <ImageButton
                android:id="@+id/editor_list_bullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_list_bullet"/>
            <ImageButton
                android:id="@+id/editor_list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_list_number"/>
            <ImageButton
                android:id="@+id/editor_underline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_underline"/>
            <ImageButton
                android:id="@+id/editor_strike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_strike"/>
            <!--<ImageButton
                android:id="@+id/editor_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_text_color"/>-->
            <!--<ImageButton
                android:id="@+id/editor_insert_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_image"/>-->
            <!--<ImageButton
                android:id="@+id/editor_insert_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="4dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_editor_insert_link"/>-->
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>