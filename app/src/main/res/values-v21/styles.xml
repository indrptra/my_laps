<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>
    
    <style name="AppIntroTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>
	<style name="MLMenuButton" parent="Base.Widget.AppCompat.Button">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:paddingStart">8dp</item>
		<item name="android:paddingEnd">8dp</item>
		<item name="android:drawablePadding">8dp</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textAllCaps">false</item>
	</style>
    <style name="MLSearchAppBar" parent="AppTheme.AppBarOverlay">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">0dp</item>
    </style>
    <style name="AppTheme.NoActionBarAndAnimation" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="toolbar_theme_black" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lines">2</item>
    </style>
    
    <style name="MLRatingBar" parent="Theme.AppCompat">
        <item name="android:colorControlNormal">@color/dark_gray</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/dark_gray</item>
    </style>
</resources>
